    <!-- <meta http-equiv="keywords" content="keyword1,keyword2,keyword3"> -->
   <!-- <meta http-equiv="description" content="this is my page"> --> 
    <meta http-equiv="content-type" content="text/html; charset=gb2312">
    
    <!--<link rel="stylesheet" type="text/css" href="./styles.css">-->
	<script type='text/javascript' src='http://www.openlayers.org/api/OpenLayers.js'></script>  <!--src最好指向自己机器上对应的js库 -->
	 <link rel="stylesheet" href="[图片]https://openlayers.org/en/v4.6.5/css/ol.css" type="text/css">
	 <link rel="stylesheet" href="MapStyle.css" type="text/css">
    <script type='text/javascript' src='https://openlayers.org/en/v4.6.5/build/ol.js'></script>
	<script type = 'text/javascript'>

		var map;
		function init()
		{
			var geographic = new OpenLayers.Projection("EPSG:4326");
            var mercator = new OpenLayers.Projection("EPSG:900913");
			
			//定义地图边界
			var bounds= new OpenLayers.Bounds(73.44696044921875,3.408477306365967,135.08583068847656,53.557926177978516).transform( geographic, mercator );  //设置坐标范围对象
			var usCenter = new OpenLayers.LonLat(116.5, 39.5).transform( geographic, mercator );
			
			var options = {				
				projection: geographic,	
                displayProjection: geographic,		//地图投影方式
				maxExtent:bounds,				     //坐标范围
				units:'degrees'	,        //单位
				center:usCenter,
				//center: new OpenLayers.LonLat(116.5, 39.5)   //图形中心坐标
			};
			map = new OpenLayers.Map('map_m',options);     //构建一个地图对象，并指向后面页面中的div对象，这里是'map'
			
			var wms = new OpenLayers.Layer.WMS(    //构建地图服务WMS对象，
			  "OpenLayers WMS",         //图层名称，最好用中文，由于页面编码原因，写中文可能乱码，可以到网上搜索解决方法			
				"http://localhost:8080/geoserver/lzyMap/wms", 		 	//geoserver所在服务器地址及对应的地图服务		
				{                                           //以下是具体访问参数
					layers: "lzyMap:res1_4m",  //图层名称，对应与我们自己创建的服务layers层名
					style:'',            //样式
					format:'image/png',   //图片格式
					TRANSPARENT:"true",   //是否透明
					//version:"1.1.0",
				},
				  {opacity: 0.5}
				  //isBaseLayer: false}   //是否基础层，必须设置
				);
			//添加wms图层
			var osm = new OpenLayers.Layer.OSM();            
			map.addLayers([osm,wms]);  
			
			//map.addLayer(wms);	//增加这个wms图层到map对象
					
			//添加control空间			
			 map.addControl(new OpenLayers.Control.LayerSwitcher());  //增加图层控制
       map.addControl(new OpenLayers.Control.MousePosition());  //增加鼠标移动显示坐标
       
       map.zoomToExtent(bounds);		//缩放到全图显示
		}		
						
	</script>
  </head>
  
  <body onload='init();'>
    <!--  This is my HTML page. <br>-->
	<div style="position: absolute; top: 50px; left: 20px; width: 300px; height: 100px;">
		<div id='map_m' style='width:1200px;height:500px;'>
		</div>
	</div>
	This is my HTML page. <br>
  </body>
